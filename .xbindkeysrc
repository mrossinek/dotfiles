###########################
# xbindkeys configuration #
###########################

"pactl set-source-mute @DEFAULT_SOURCE@ toggle"
        XF86AudioMicMute

"pactl set-sink-mute @DEFAULT_SINK@ toggle"
        XF86AudioMute

"pactl set-sink-volume @DEFAULT_SINK@ +2%"
        XF86AudioRaiseVolume

"pactl set-sink-volume @DEFAULT_SINK@ -2%"
        XF86AudioLowerVolume

"xbacklight -inc 5"
        XF86MonBrightnessUp

"xbacklight -dec 5"
        XF86MonBrightnessDown

"maim -uks ~/Pictures/Screenshots/screenshot_$(date +%s).png"
        Print

"maim -ui $(xdotool getactivewindow) ~/Pictures/Screenshots/screenshot_$(date +%s).png"
        Mod4 + Print

"xset dpms force off"
        Mod4 + 0

"~/cron_sync.sh"
        XF86Tools

 "rofi -modi 'clipboard:greenclip print' -show clipboard -run-command '{cmd}'"
        XF86Launch1

"~/keyboard_hotplug.sh"
        XF86Launch2

"~/toggle_screen.sh"
        XF86Display

"~/xrandr_duplicate.sh"
        Shift + XF86Display

"mpc play"
        m:0x0 + c:208
        XF86AudioPlay

"mpc pause"
        m:0x0 + c:209
        XF86AudioPause

"mpc toggle"
        m:0x0 + c:172
        XF86AudioPlay

"mpc stop"
        m:0x0 + c:174
        XF86AudioStop

"mpc next"
        m:0x0 + c:171
        XF86AudioNext

"mpc prev"
        m:0x0 + c:173
        XF86AudioPrev

##################################
# End of xbindkeys configuration #
##################################
