[calendars]

[[Important]]
path = ~/.calendars/important/
color = light red

[[Personal]]
path = ~/.calendars/personal/
color = light green

[[Sport]]
path = ~/.calendars/sport/
color = yellow

[[Work]]
path = ~/.calendars/work/
color = light blue

[[Birthdays]]
path = ~/.contacts/
color = light magenta
type = birthdays

[sqlite]
path = ~/.local/share/khal/khal.db

[locale]
unicode_symbols = False

local_timezone = Europe/Zurich
default_timezone = Europe/Zurich

timeformat = %H:%M
dateformat = %d.%m.
longdateformat = %Y-%m-%d
datetimeformat =  %d.%m. %H:%M
longdatetimeformat = %Y-%m-%d %H:%M

firstweekday = 0
weeknumbers = left

[default]
default_command = calendar
default_calendar = Personal
timedelta = 7d
print_new = event
highlight_event_days = True
