# basics
auto-reload yes
reload-time 60

max-items 500

scrolloff 10

articlelist-format "%4i  %-32a  %t"

browser "qutebrowser %u"

# rebind keys
unbind-key j
unbind-key k
unbind-key J
unbind-key K
bind-key j next
bind-key k prev
bind-key J next-feed
bind-key K prev-feed

# macros
macro m set browser "tsp mpv %u" ; open-in-browser-and-mark-read ; set browser "qutebrowser %u"

# color theme
color listfocus color7 color6
color listnormal_unread color1 default bold
color listfocus_unread color7 color6 bold
color info color0 color3
