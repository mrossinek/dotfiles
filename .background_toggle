#!/usr/bin/sh

if [[ -n $TMUX ]]; then
    # remove colors setting from alacritty config
    sed -i '$ d' ~/.config/alacritty/alacritty.yml
    if [ `tmux showenv THEME` = "THEME=dark" ]; then
        echo 'colors: *light' >> ~/.config/alacritty/alacritty.yml
        tmux setenv THEME 'light'
        tmux source ~/.tmux_status_light.conf
    else
        echo 'colors: *dark' >> ~/.config/alacritty/alacritty.yml
        tmux setenv THEME 'dark'
        tmux source ~/.tmux_status_dark.conf
    fi
fi
