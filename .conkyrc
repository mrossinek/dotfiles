conky.config={
        background=false,
        out_to_console=true,
        out_to_x=false,
        update_interval=2,
        total_run_times=0,
        use_spacer=none,
        lua_load='~/.conky/scripts/lua-functions.lua',
        template0=[[^fn(Font Awesome 5 Free:style=Solid:size=11)\1^fn()]],
        template9=[[^fn(Font Awesome 5 Brands:style=Solid:size=13)\1^fn()]],
        template1=[[${exec pactl list sinks | grep Volume | grep -o "[0-9]*%" | head -1 | sed 's/%//'}]]
};


conky.text = [[
# mpd
${if_running mpd}${if_mpd_playing}\
${if_match "${mpd_status}" == "Playing"}\
^fg(\#FFFFFF)\
${else}${if_match "${mpd_status}" == "Paused"}\
^fg(\#FFFF00)\
${endif}${endif}\
^ca(1,~/.conky/buttons/music.sh)^ca(3,mpc toggle)\
${template0 } ${lua format %.20s ${mpd_artist}}: ${lua format %.20s ${mpd_title}} \
^ca()^ca()\
${endif}${endif}\
#
# volume
^ca(1,~/.conky/buttons/volume.sh)^ca(3,pactl set-sink-mute @DEFAULT_SINK@ toggle)\
${if_match "${exec pactl list sinks | grep Mute | sed 's/Mute: //' | sed 's/[^a-z]//'}" == "yes"}\
^fg(\#FF0000) ${template0 }\
${else}${if_match ${template1} == 0}\
^fg(\#FF0000)${template0 }\
${else}${if_match ${template1} >= 100}\
^fg(\#FF0000)${template0 }\
${else}${if_match ${template1} >= 50}\
^fg(\#FFFF00)${template0 }\
${else}${if_match ${template1} <= 50}\
^fg(\#00FF00)${template0 }\
${endif}${endif}${endif}${endif}${endif}\
 ${template1}% \
^ca()^ca()\
#
\
# bluetooth
${if_existing /proc/acpi/ibm/bluetooth disabled}\
^fg(\#444444)\
${else}\
${if_match "${exec echo -e 'info\nquit' | bluetoothctl | grep Connected | sed 's/Connected: //' | sed 's/[^a-z]//'}" == "yes"}\
^fg(\#1565c1)\
${else}\
^fg(\#777777)\
${endif}${endif}\
${template9 }\
#
 \
# networking
${if_existing /proc/net/route tun0}^fg(\#00ff00)${template0 } \
${else}\
^fg(\#f9a825)\
${endif}\
${if_existing /proc/net/route wlp3s0}${template0 } ${wireless_link_qual_perc wlp3s0}% @ ${wireless_essid wlp3s0} (${addr wlp3s0}) ^fg(\#00aa4a)${template0 } ${lua format %7s ${downspeed wlp3s0}} ^fg(\#ff3333)${template0 } ${lua format %7s ${upspeed wlp3s0}} \
${else}\
${if_existing /proc/net/route wlp3s0}${template0 } (${addr enp0s31f6}) ^fg(\#00aa4a)${template0 } ${lua format %7s ${downspeed enp0s31f6}} ^fg(\#ff3333)${template0 } ${lua format %7s ${upspeed enp0s31f6}} \
${else}\
${if_match "${exec rfkill list wifi | grep -o yes}" == "yes"}\
^fg(\#ff0000)${template0 } Disabled! \
${else}\
^fg(\#ff0000)${template0 } No internet! \
${endif}${endif}${endif}\
#
# system monitoring
#
# battery
^ca(1,~/.conky/buttons/bat.sh)\
${if_existing /sys/class/power_supply/BAT0/status Charging}\
^bg()^fg(\#FFFFFF)${template0 }\
${else}${if_match ${battery_percent BAT0} >= 80}\
^fg(\#00FF00)${template0 }\
${else}${if_match ${battery_percent BAT0} >= 50}\
^fg(\#00FF00)${template0 }\
${else}${if_match ${battery_percent BAT0} >= 30}\
^fg(\#FFFF00)${template0 }\
${else}${if_match ${battery_percent BAT0} >= 10}\
^bg(\#FFFF00)^fg(\#000000)${template0 }\
${else}\
^bg(\#FF0000)^fg(\#FFFFFF)${template0 }\
${endif}${endif}${endif}${endif}${endif}\
 ${battery_short BAT0}\
^bg() \
${if_existing /sys/class/power_supply/BAT1/status Charging}\
^bg()^fg(\#FFFFFF)${template0 }\
${else}${if_match ${battery_percent BAT1} >= 80}\
^fg(\#00FF00)${template0 }\
${else}${if_match ${battery_percent BAT1} >= 50}\
^fg(\#00FF00)${template0 }\
${else}${if_match ${battery_percent BAT1} >= 30}\
^fg(\#FFFF00)${template0 }\
${else}${if_match ${battery_percent BAT1} >= 10}\
^bg(\#FFFF00)^fg(\#000000)${template0 }\
${else}\
^bg(\#FF0000)^fg(\#FFFFFF)${template0 }\
${endif}${endif}${endif}${endif}${endif}\
 ${battery_short BAT1}\
^bg() \
^ca()\
#
# brightness
^fg(\#FFFFFF)${template0 } ${exec xbacklight | cut -d'.' -f1}% \
#
^ca(3,urxvt -e htop)\
^ca(1,~/.conky/buttons/temp.sh)\
# temperature
${if_match ${acpitemp} >= 100}\
^bg(\#FFFF00)^fg(\#FF0000)${template0 }\
${else}${if_match ${acpitemp} >= 85}\
^fg(\#FF0000)${template0 }\
${else}${if_match ${acpitemp} >= 60}\
^fg(\#FFFF00)${template0 }\
${else}\
^fg(\#FFFFFF)${template0 }\
${endif}${endif}${endif}\
 ${lua format %4s ${acpitemp}°C} \
^bg()\
^ca()\
#
^ca(1,~/.conky/buttons/cpu.sh)\
# cpu usage
${if_match ${cpu} >= 100}\
^bg(\#FFFF00)^fg(\#FF0000)\
${else}${if_match ${cpu} >= 75}\
^fg(\#FF0000)\
${else}${if_match ${cpu} >= 50}\
^fg(\#FFFF00)\
${else}\
^fg(\#FFFFFF)\
${endif}${endif}${endif}\
${template0 } ${lua format %3s ${cpu}%} \
^bg()\
^ca()\
#
^ca(1,~/.conky/buttons/ram.sh)\
# ram usage
${if_match ${memperc} >= 100}\
^bg(\#FFFF00)^fg(\#FF0000)\
${else}${if_match ${memperc} >= 75}\
^fg(\#FF0000)\
${else}${if_match ${memperc} >= 50}\
^fg(\#FFFF00)\
${else}\
^fg(\#FFFFFF)\
${endif}${endif}${endif}\
${template0 } ${lua format %3s ${memperc}%} \
^bg()\
^ca()^ca()\
#
 \
# disk usage
^ca(1,urxvt -e vifm)\
^fg(\#FFFFFF)${template0 } ${fs_free /} \
^fg(\#FFFFFF)${template0 } ${fs_free /home/} \
^ca()\
#
 \
# cron (lock status)
${if_existing .sync_lock}^fg(\#FFFF00)\
${else}${if_existing .cron_lock}^fg(\#555555)\
${else}^fg(\xFFFFFF)\
${endif}${endif}\
^ca(1,~/cron_sync.sh)^ca(3,~/actuate_cron.sh)\
${template0 }\
^ca()^ca()\
#
  \
# mail
^ca(1,mutt)^ca(3,getmail -n; offlineimap; ~/.conky/scripts/mail-counter.sh)\
${if_match ${exec cat ~/.mailcount} > 0}\
^fg(\#00FF00)${template0 }\
${else}\
^fg(\#FFFFFF)${template0 }\
${endif}\
 ${exec cat ~/.mailcount} \
^ca()^ca()\
#
# news
${if_match ${exec cat ~/.newscount} > 0}\
^fg(\#00FF00)\
${else}\
^fg(\#FFFFFF)\
${endif}\
^ca(1,urxvt -e "newsboat"; ~/.conky/scripts/news-counter.sh)\
^ca(3,newsboat -x reload; ~/.conky/scripts/news-counter.sh)\
${template0 } ${exec cat ~/.newscount} \
^ca()^ca()\
#
# stocks
^ca(1,~/.conky/buttons/stocks.sh)^ca(3,cd ~/.stocks/; ./watcher.sh; cd)\
${if_existing .stocks/tmp.txt}\
^fg(\#FFFF00)\
${else}\
^fg(\#FFFFFF)\
${endif}\
${template0 } \
^ca()^ca()\
#
 \
# todo
^ca(1,~/.conky/buttons/tasks.sh)^ca(3,task sync)\
^fg(\#FFFFFF)${template0 } \
^ca()^ca()\
#
# timew productivity
^ca(1,~/.conky/buttons/productivity_toggle.sh)\
${if_match ${exec timew get dom.active} == 1}\
${if_existing .productivity_timer}\
^fg(\#00aa4a)${template0 } ${exec ~/.conky/scripts/productivity-timer.py} \
${else}\
^fg(\#00aa4a)${template0 } \
${endif}\
${else}\
${if_existing .productivity_timer}\
^fg(\#ff3333)${template0 } ${exec ~/.conky/scripts/productivity-timer.py} \
${else}\
^fg(\#ff3333)${template0 } \
${endif}\
${endif}\
^ca()\
#
# calendar
^ca(1,~/.conky/buttons/calendar.sh)^ca(3,urxvt -e ikhal)\
^fg(\#FFFFFF)${template0 } ${time %a %b %d} \
^ca()^ca()\
#
# clock
^ca(1,~/.conky/buttons/timew_preview.sh)^ca(3,~/.conky/buttons/timew_toggle.sh)\
${if_match ${exec timew get dom.active} == 1}\
^fg(\#00FF00)\
${else}\
^fg(\#f9a825)\
${endif}\
${template0 } ${time %I:%M} \
^ca()^ca()\
#
]];
