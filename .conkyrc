conky.config={
        background=false,
        out_to_console=true,
        out_to_x=false,
        update_interval=1,
        total_run_times=0,
        use_spacer=none,
        template0=[[^fn(Font Awesome 5 Free:style=Solid:size=9)\1 ^fn()]],
};


conky.text = [[
# mpd
${if_running mpd}${if_mpd_playing}\
${if_match "${mpd_status}" == "Playing"}\
^fg(\#FFFFFF)\
${else}${if_match "${mpd_status}" == "Paused"}\
^fg(\#FFFF00)\
${endif}${endif}\
^ca(1,mpc toggle)\
${template0 } ${mpd_artist} - ${mpd_title} \
^ca()\
${endif}${endif}\
#
# volume
${if_match ${exec amixer get PCM -M | grep -o "[0-9]*%" | sed 's/%//'} == 0}\
^fg(\#FF0000)${template0 }\
${else}${if_match ${exec amixer get PCM -M | grep -o "[0-9]*%" | sed 's/%//'} >= 100}\
^fg(\#FF0000)${template0 }\
${else}${if_match ${exec amixer get PCM -M | grep -o "[0-9]*%" | sed 's/%//'} >= 50}\
^fg(\#FFFF00)${template0 }\
${else}${if_match ${exec amixer get PCM -M | grep -o "[0-9]*%" | sed 's/%//'} <= 50}\
^fg(\#00FF00)${template0 }\
${endif}${endif}${endif}${endif}\
^ca(1,amixer set PCM toggle)\
 ${exec amixer get PCM -M | grep -o "[0-9]*%"} \
^ca()\
#
 \
# networking 
${if_existing /proc/net/route wlan0}^fg(\#f9a825)${template0 } ${wireless_link_qual_perc wlan0}% @ ${wireless_essid wlan0} (${addr wlan0}) ^fg(\#00aa4a)${template0 } ${downspeed wlan0} ^fg(\#ff3333)${template0 } ${upspeed wlan0} \
${else}\
${if_existing /proc/net/route eth0}^fg(\#f9a825)${template0 } (${addr eth0}) ^fg(\#00aa4a)${template0 } ${downspeed eth0} ^fg(\#ff3333)${template0 } ${upspeed eth0} \
${else}\
^fg(\#ff0000) No internet! \
${endif}${endif}\
#
^ca(1,urxvt -e htop)\
# temperature
${if_match ${acpitemp} >= 100}\
^bg(\#FFFF00)^fg(\#FF0000)${template0 }\
${else}${if_match ${acpitemp} >= 85}\
^fg(\#FF0000)${template0 }\
${else}${if_match ${acpitemp} >= 60}\
^fg(\#FFFF00)${template0 }\
${else}\
^fg(\#FFFFFF)${template0 }\
${endif}${endif}${endif}\
 ${acpitemp}°C \
^bg()\
#
# cpu usage
${if_match ${cpu} >= 100}\
^bg(\#FFFF00)^fg(\#FF0000)\
${else}${if_match ${cpu} >= 75}\
^fg(\#FF0000)\
${else}${if_match ${cpu} >= 50}\
^fg(\#FFFF00)\
${else}\
^fg(\#FFFFFF)\
${endif}${endif}${endif}\
${template0 } ${cpu}% \
^bg()\
#
# ram usage
${if_match ${memperc} >= 100}\
^bg(\#FFFF00)^fg(\#FF0000)\
${else}${if_match ${memperc} >= 75}\
^fg(\#FF0000)\
${else}${if_match ${memperc} >= 50}\
^fg(\#FFFF00)\
${else}\
^fg(\#FFFFFF)\
${endif}${endif}${endif}\
${template0 } ${memperc}% \
^bg()\
#
^ca()\
#
 \
# disk usage
^fg(\#FFFFFF)${template0 } ${fs_free /} \
^fg(\#FFFFFF)${template0 } ${fs_free /home/} \
#
 \
# mail
${if_match ${exec ~/.conky/scripts/mail-counter.sh} > 0}\
^fg(\#00FF00)${template0 }\
${else}\
^fg(\#FFFFFF)${template0 }\
${endif}\
 ${exec ~/.conky/scripts/mail-counter.sh} \
#
# news
${if_match ${exec newsboat -x print-unread | sed 's/[^0-9]//g'} > 0}\
^fg(\#00FF00)\
${else}\
^fg(\#FFFFFF)\
${endif}\
^ca(1,urxvt -e "newsboat")\
${template0 } ${exec newsboat -x print-unread | sed 's/[^0-9]//g'} \
^ca()\
#
# stocks
^ca(1,~/.conky/buttons/stocks.sh)\
^fg(\#FFFFFF)${template0 } \
^ca()\
#
 \
#
^ca(1,~/.conky/buttons/calendar.sh)\
# calendar
^fg(\#FFFFFF)${template0 } ${time %a %b %d} \
#
# clock
^fg(\#f9a825)${template0 } ${time %I:%M} \
#
^ca()\
]];
