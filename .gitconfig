[include]
        path = ~/.gitconfig_user.inc

[core]
	editor = nvim

[diff]
	tool = nvim -d

[merge]
        tool = vimdiff
        prompt = false

[mergetool]
        prompt = yes

[mergetool "vimdiff"]
        cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[alias]
        a = add
        br = branch
        c = commit
        ch = checkout
        d = diff
        dc = diff --cached
        i = init
        l = log
        ls = ls-tree -r master
        m = merge
        pl = pull
        ps = push
        s = status
        t = tree
	tree = log --graph --oneline --all
