[include]
    path = ~/.gitconfig_user.inc

[core]
    editor = nvim
    pager = delta --theme=TwoDark --color-only

[diff]
    tool = nvim -d

[merge]
    tool = vimdiff
    prompt = false

[mergetool]
    prompt = yes

[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[pull]
    rebase = true
    ff = only

[color]
    ui = true

[color "diff"]
    meta = yellow

[alias]
    a = add
    br = branch
    c = commit -v
    cs = commit -S -v
    ch = checkout
    d = diff
    dc = diff --cached
    gr = log --graph --oneline --all  # mnemonic: graph
    i = init
    l = log
    ls = ls-tree -r master
    m = merge
    pl = pull
    ps = push
    s = status --short
    t = tree
    wc = whatchanged
