###########################
# xbindkeys configuration #
###########################

"pactl set-source-mute @DEFAULT_SOURCE@ toggle"
        XF86AudioMicMute

"pactl set-sink-mute @DEFAULT_SINK@ toggle"
        XF86AudioMute

"pactl set-sink-volume @DEFAULT_SINK@ +2%"
        XF86AudioRaiseVolume

"pactl set-sink-volume @DEFAULT_SINK@ -2%"
        XF86AudioLowerVolume

"xbacklight -inc 5"
        XF86MonBrightnessUp

"xbacklight -dec 5"
        XF86MonBrightnessDown

"maim -uks ~/Pictures/Screenshots/screenshot_$(date +%s).png"
        Print

"maim -ui $(xdotool getactivewindow) ~/Pictures/Screenshots/screenshot_$(date +%s).png"
        Mod4 + Print

"physlock -ms"
        Mod4 + z
        # zero

"~/easy_trackpoint.sh"
        Mod4 + g
        # next to the trackpoint

"rofi-pass"
        Mod4 + s
        # safe

"rofimoji"
        Mod4 + e
        # emoji

"rofi -modi 'clipboard:greenclip print' -show clipboard -run-command '{cmd}'"
        Mod4 + i
        # insert

"displayctl"
        Mod4 + x
        # xrandr

"playerctl play"
        m:0x0 + c:208
        XF86AudioPlay

"playerctl pause"
        m:0x0 + c:209
        XF86AudioPause

"playerctl play-pause"
        m:0x0 + c:172
        XF86AudioPlay

"playerctl stop"
        m:0x0 + c:174
        XF86AudioStop

"playerctl next"
        m:0x0 + c:171
        XF86AudioNext

"playerctl previous"
        m:0x0 + c:173
        XF86AudioPrev

"rofi-mpc"
        Mod4 + a
        # audio

"rofi -modi calc -show calc -no-show-match -no-sort"
        Mod4 + c
        # calculator

"rofi -modi file-browser -show file-browser"
        Mod4 + f
        # file-browser

"rofi -modi json-dict -show json-dict -json-dict-path ${HOME}/.local/share/dicts/json -json-dict-mode 2"
        Mod4 + d
        # dictionary

# dunst controls

"dunstctl close"
        control+alt + space

"dunstctl close-all"
        control+alt+shift + space

"dunstctl history-pop"
        control+alt + period

"dunstctl context"
        control+alt + comma

"dunstctl set-paused toggle"
        control+alt + semicolon

##################################
# End of xbindkeys configuration #
##################################
